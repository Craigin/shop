{% include '/public/theme/header.twig' %}
<!--  -->
<link rel="stylesheet" href="{{ THEME }}/css/success.css">
<script src="/public/jquery-2.2.3.min.js"></script>
<!--  -->

    <div class="m-hd">
        <div class="m-topBar">
            <a class="goback" href="/{{ identity_tag}}"></a>
            <div style="width: 100%;">
                <div class="title">{{ lang.order_detail }}</div>
            </div>
        </div>
    </div>
    <div class="m-orderItem">
        <div class="row-1">
            <div>
                <span class="tips_orderid">{{ lang.order_time }} :&nbsp;&nbsp;&nbsp;</span>{{ add_time }}
            </div>
            <div>
                <span class="tips_orderid">{{ lang.order_noumber }} :&nbsp;&nbsp;&nbsp;</span>{{ order_id }}
            </div>
        </div>
        <div class="row-2">
            <div class="goodImg f-fl">
                <img src="{{ thumb }}" width="100%" height="100%">
            </div>
            <div class="goodInfo f-fl">
                <div class="goodName">{{ title }}</div>
                <div class="goodNum">{{ attr_name }}</div>
                <div class="goodName">{{ currency_code }} <span render='format'>{{ price }}</span>&nbsp;&nbsp;&nbsp;
                    <span class="old_price">{{ currency_code }} <span render='format'>{{ market_price }}</span></span>
                </div>
            </div>
            <div class="goodStatus f-fr">
                <div>
                    <span>x</span>
                    <span>{{ num }}</span>
                </div>
            </div>
        </div>
    </div>
    <div class="timetips">{{ lang.service_time }} :  09:00 - 22:00</div>
    <div class="w-tips">
        <a href="javascript:;" onclick="P8.startGroupChat({{ service_contact_id }},1);" class="w-button w-button-block btn-comment kefu">
            <i class="u-icon u-icon-detail-kefu"></i>{{ lang.service_online }}
        </a>
    </div>
    <div class="m-orderItem">
        <div class="row-1">
            <div>{{ name }} {{ last_name }} &nbsp;&nbsp;&nbsp;{{ mobile }}</div>
            <div>{{ address }}</div>
        </div>
        <div class="row-2">
            <div>
                <span class="tips">{{ lang.paymethod }}:  </span>{{ pay_method }}</div>
            <div>
                <span class="tips">{{ lang.total }}:  </span>{{ currency_code }}<span render='format'>{{ total }}</span></div>
            <div>
                <span class="tips">{{ lang.freight }}:  </span>{{ currency_code }}{{ shipping }}</div>
        </div>
        <div class="row-2 red">
            <span class="tipred">{{ lang.pay }}:  </span>
            {{ currency_code }}<span render='format'>{{ total }}</span>
        </div>
    </div>
<script type="text/javascript">
$('[render=format]').html(moneyFormat($('[render=format]').html()));
function moneyFormat(input) {
    var number = new Number(input);
    var str = number.toString();
    var newstr = str.replace(/\d{1,3}(?=(\d{3})+$)/g,function(s){
        return s+','
    });
    return newstr;
}


</script>
